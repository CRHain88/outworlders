{#
 # Minutes entry template
 # -------------------
 #
 # This template is loaded whenever http://example.com/minutes is requested,
 # because it is located at minutes/_entry.twig in the public/templates/ folder.
 #
 # See this page for more details on how Craft routes requests:
 # http://craftcms.com/docs/routing
 #}

{% extends "_layout" %}

{% block content %}
  <div class="content" data-eq--content>
    <main class="content__primary [ card card--blue card--light ]">
      <article class="card__container">
        <div class="card__header">
          <h1>{{ entry }}</h1>
        </div>

        <div class="dynamic-body-copy">
          {{ entry.body }}
        </div>

      </article>
    </main>

    {% if entry.minutesAssets | length %}
      <aside class="content__secondary [ card card--purple card--light ]">
        <div class="card__container">
          <div class="card__header">
            <h2>Downloads</h2>
          </div>
          <ul>
            {% for asset in entry.minutesAssets %}
              <li>
                <a href="{{ asset.getUrl() }}" target="blank">{{ asset }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </aside>
    {% endif %}
  </div>
{% endblock %}
